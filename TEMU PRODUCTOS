            { n: "Hub USB 3.0 Ultra Delgado 4 Puertos", p: 3.07, e: "üî≥" },
            { n: "Base Expansi√≥n 11-en-1 4K HDMI", p: 11.73, e: "üñ•Ô∏è" },
            { n: "Reproductor M√∫sica MP3 64GB Gris", p: 3.08, e: "üéµ" }
        ];

        const personas = ["VALENTIN", "KARLA", "PAULA", "ADRIAN", "AMIGO DE ADRIAN", "INGRID", "JAIME", "MECHE", "SEBASTIAN", "MATHIAS"];
        const cargoImport = 2.25;
        let carrito = [];
        let facturasFinales = [];
        let totalGlobal = 0;

        window.onload = () => {
            cargarPersonas();
            cargarCatalogo();
        };

        function cargarPersonas() {
            const select = document.getElementById('selectPersona');
            personas.sort().forEach(p => {
                const opt = document.createElement('option');
                opt.value = p; opt.innerText = p;
                select.appendChild(opt);
            });
        }

        function cargarCatalogo() {
            const list = document.getElementById('listaCatalogo');
            productos.forEach((p, idx) => {
                const div = document.createElement('div');
                div.className = "prod-item flex items-center justify-between p-2 bg-gray-50 rounded-lg border border-gray-100 hover:border-orange-300 hover:bg-orange-50 cursor-pointer transition text-xs";
                div.innerHTML = `<div class="flex items-center gap-2"><span>${p.e}</span> <span>${p.n}</span></div><b class="text-orange-600 font-mono">$${p.p.toFixed(2)}</b>`;
                div.onclick = () => a√±adirCarrito(idx);
                list.appendChild(div);
            });
            document.getElementById('countCatalogo').innerText = `0/54`;
        }

        function filtrarCatalogo() {
            const query = document.getElementById('searchProd').value.toLowerCase();
            const items = document.querySelectorAll('.prod-item');
            items.forEach(it => {
                it.style.display = it.innerText.toLowerCase().includes(query) ? 'flex' : 'none';
            });
        }

        function a√±adirCarrito(idx) {
            const p = productos[idx];
            carrito.push({ ...p, idID: Date.now() });
            actualizarUI();
        }

        function quitarCarrito(idID) {
            carrito = carrito.filter(c => c.idID !== idID);
            actualizarUI();
        }

        function actualizarUI() {
            const container = document.getElementById('itemsFactura');
            const msg = document.getElementById('msgVacio');
            container.innerHTML = "";
            
            if (carrito.length === 0) {
                container.appendChild(msg);
                document.getElementById('valSubtotal').innerText = "$0.00";
                document.getElementById('valTotal').innerText = "$0.00";
                return;
            }

            let sub = 0;
            carrito.forEach(c => {
                sub += c.p;
                const d = document.createElement('div');
                d.className = "flex justify-between items-center bg-white p-2 rounded-lg border text-xs shadow-sm";
                d.innerHTML = `<span>${c.e} ${c.n}</span> <div class="flex items-center gap-2"><b>$${c.p.toFixed(2)}</b> <button onclick="quitarCarrito(${c.idID})" class="text-red-500 font-bold px-1">‚úï</button></div>`;
                container.appendChild(d);
            });

            document.getElementById('valSubtotal').innerText = `$${sub.toFixed(2)}`;
            document.getElementById('valTotal').innerText = `$${(sub + cargoImport).toFixed(2)}`;
        }

        function guardarFactura() {
            if (carrito.length === 0) return alert("Factura vac√≠a");
            
            const sub = carrito.reduce((a, b) => a + b.p, 0);
            const fac = {
                id: facturasFinales.length + 1,
                cliente: document.getElementById('selectPersona').value,
                items: [...carrito],
                sub: sub,
                total: sub + cargoImport
            };

            facturasFinales.unshift(fac);
            totalGlobal += fac.total;
            
            carrito = [];
            actualizarUI();
            actualizarHistorial();
        }

        function actualizarHistorial() {
            document.getElementById('granTotalGlobal').innerText = `$${totalGlobal.toFixed(2)}`;
            const list = document.getElementById('historialFacturas');
            list.innerHTML = "";

            facturasFinales.forEach(f => {
                const div = document.createElement('div');
                div.className = "bg-orange-50 border border-orange-200 p-3 rounded-xl shadow-sm";
                div.innerHTML = `
                    <div class="flex justify-between items-center mb-1">
                        <b class="text-xs text-orange-800">${f.cliente}</b>
                        <b class="font-mono text-sm">$${f.total.toFixed(2)}</b>
                    </div>
                    <button onclick="reimprimir(${f.id})" class="text-[10px] bg-white border border-orange-200 px-2 py-1 rounded text-orange-600 hover:bg-orange-600 hover:text-white transition">Re-Imprimir</button>
                `;
                list.appendChild(div);
            });
        }

        function reimprimir(id) {
            const f = facturasFinales.find(x => x.id === id);
            llenarImpresion(f);
            window.print();
        }

        function imprimirFactura() {
            if (carrito.length === 0) return alert("Factura vac√≠a");
            const sub = carrito.reduce((a, b) => a + b.p, 0);
            llenarImpresion({
                id: "TEMP",
                cliente: document.getElementById('selectPersona').value,
                items: carrito,
                sub: sub,
                total: sub + cargoImport
            });
            window.print();
        }

        function llenarImpresion(f) {
            document.getElementById('printID').innerText = f.id;
            document.getElementById('printCliente').innerText = f.cliente;
            document.getElementById('printSubtotal').innerText = `$${f.sub.toFixed(2)}`;
            document.getElementById('printTotal').innerText = `$${f.total.toFixed(2)}`;
            
            const b = document.getElementById('printBody');
            b.innerHTML = "";
            f.items.forEach(i => {
                const r = document.createElement('tr');
                r.className = "border-b text-sm";
                r.innerHTML = `<td class="p-2">${i.e} ${i.n}</td><td class="p-2 text-right font-mono">$${i.p.toFixed(2)}</td>`;
                b.appendChild(r);
            });
        }
    </script>
