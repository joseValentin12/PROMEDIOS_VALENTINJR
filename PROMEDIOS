<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de Notas Trimestrales</title>
    <!-- Incluye Tailwind CSS para un diseño limpio y responsivo -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #e2e8f0;
        }
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        input[type="number"] {
            -moz-appearance: textfield;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4 md:p-8">
    <div class="bg-white p-6 md:p-10 rounded-3xl shadow-2xl w-full max-w-2xl mx-auto border-4 border-slate-200">
        <!-- Título y descripción -->
        <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-extrabold text-slate-800">Calculadora de Notas</h1>
            <p class="mt-2 text-slate-500 text-sm md:text-base">
                Calcula tu nota final de manera visual y organizada.
            </p>
        </div>

        <!-- Contenedor principal de notas - Estructura tipo tabla -->
        <div class="space-y-6">

            <!-- Sección de Actividades (70%) -->
            <div class="bg-gray-50 p-6 rounded-2xl border-2 border-gray-200 shadow-inner">
                <h2 class="text-xl font-bold text-gray-700 mb-4 flex items-center">
                    Actividades y Deberes <span class="text-sm font-normal text-gray-500 ml-2">(70%)</span>
                </h2>
                <div id="grades-container" class="space-y-4">
                    <!-- Fila de ejemplo para las notas -->
                    <div class="grade-input flex items-center space-x-2">
                        <input type="number" min="0" max="10" step="0.01" placeholder="Nota de actividad" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200">
                        <button onclick="removeGradeInput(this)" class="p-2 text-gray-400 hover:text-red-500 transition-colors duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.013 21H7.987a2 2 0 01-1.92-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1H9a1 1 0 00-1 1v3m10 0h-16" />
                            </svg>
                        </button>
                    </div>
                </div>
                <button id="add-grade-btn" class="mt-4 w-full p-3 text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors duration-200 shadow-md">
                    + Agregar otra nota
                </button>
            </div>

            <!-- Sección de Examen y Proyecto con layout de grid -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Nota del Examen (20%) -->
                <div class="bg-gray-50 p-6 rounded-2xl border-2 border-gray-200 shadow-inner">
                    <h2 class="text-xl font-bold text-gray-700 mb-4 flex items-center">
                        Examen <span class="text-sm font-normal text-gray-500 ml-2">(20%)</span>
                    </h2>
                    <input id="exam-grade" type="number" min="0" max="10" step="0.01" placeholder="Nota del examen" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200">
                </div>
                <!-- Nota del Proyecto (10%) -->
                <div class="bg-gray-50 p-6 rounded-2xl border-2 border-gray-200 shadow-inner">
                    <h2 class="text-xl font-bold text-gray-700 mb-4 flex items-center">
                        Proyecto <span class="text-sm font-normal text-gray-500 ml-2">(10%)</span>
                    </h2>
                    <input id="project-grade" type="number" min="0" max="10" step="0.01" placeholder="Nota del proyecto" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200">
                </div>
            </div>
        </div>

        <!-- Botón de cálculo -->
        <button id="calculate-btn" class="mt-8 w-full p-4 font-extrabold text-white bg-green-600 rounded-lg hover:bg-green-700 transition-colors duration-200 shadow-lg transform hover:scale-105">
            Calcular Nota Final
        </button>

        <!-- Sección de resultados y advertencia -->
        <div id="result-area" class="mt-8 text-center p-6 md:p-8 bg-slate-100 rounded-2xl border-2 border-slate-300 shadow-inner hidden">
            <h3 class="text-lg font-bold text-slate-600 uppercase tracking-wide">Nota Final</h3>
            <p id="final-grade" class="text-5xl md:text-6xl font-extrabold text-slate-800 mt-2">0.00</p>
            <p id="warning-message" class="mt-4 text-red-600 font-semibold text-sm hidden">
                ¡Advertencia! La nota final es inferior a 7.
            </p>
            <p id="error-message" class="mt-4 text-red-600 font-semibold text-sm hidden"></p>
        </div>
    </div>

    <script>
        // Obtiene referencias a los elementos del DOM
        const gradesContainer = document.getElementById('grades-container');
        const addGradeBtn = document.getElementById('add-grade-btn');
        const calculateBtn = document.getElementById('calculate-btn');
        const examGradeInput = document.getElementById('exam-grade');
        const projectGradeInput = document.getElementById('project-grade');
        const resultArea = document.getElementById('result-area');
        const finalGradeEl = document.getElementById('final-grade');
        const warningMessageEl = document.getElementById('warning-message');
        const errorMessageEl = document.getElementById('error-message');

        // Función para añadir un nuevo campo de nota de actividad
        function addGradeInput() {
            const newDiv = document.createElement('div');
            newDiv.className = 'grade-input flex items-center space-x-2';
            newDiv.innerHTML = `
                <input type="number" min="0" max="10" step="0.01" placeholder="Nota de actividad" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200">
                <button onclick="removeGradeInput(this)" class="p-2 text-gray-400 hover:text-red-500 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.013 21H7.987a2 2 0 01-1.92-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1H9a1 1 0 00-1 1v3m10 0h-16" />
                    </svg>
                </button>
            `;
            gradesContainer.appendChild(newDiv);
        }

        // Función para eliminar un campo de nota de actividad
        function removeGradeInput(button) {
            const parentDiv = button.closest('.grade-input');
            if (parentDiv) {
                parentDiv.remove();
            }
        }

        // Función principal para calcular la nota
        function calculateGrade() {
            let sumOfActivities = 0;
            let countOfActivities = 0;
            let errorMessage = '';

            // Limpia mensajes de error y advertencia previos
            errorMessageEl.classList.add('hidden');
            warningMessageEl.classList.add('hidden');
            resultArea.classList.add('hidden');

            // Obtiene y valida las notas de actividades
            const activityInputs = document.querySelectorAll('#grades-container input[type="number"]');
            activityInputs.forEach(input => {
                const grade = parseFloat(input.value);
                if (!isNaN(grade) && grade >= 0 && grade <= 10) {
                    sumOfActivities += grade;
                    countOfActivities++;
                } else if (input.value !== '') {
                    errorMessage = 'Por favor, ingresa solo notas válidas entre 0 y 10 para las actividades.';
                }
            });

            // Valida que al menos una nota de actividad haya sido ingresada
            if (countOfActivities === 0 && errorMessage === '') {
                errorMessage = 'Debes ingresar al menos una nota de actividad para calcular el promedio.';
            }

            // Obtiene y valida la nota del examen
            const examGrade = parseFloat(examGradeInput.value);
            if (isNaN(examGrade) || examGrade < 0 || examGrade > 10) {
                errorMessage = errorMessage || 'Por favor, ingresa una nota válida para el examen (entre 0 y 10).';
            }

            // Obtiene y valida la nota del proyecto
            const projectGrade = parseFloat(projectGradeInput.value);
            if (isNaN(projectGrade) || projectGrade < 0 || projectGrade > 10) {
                errorMessage = errorMessage || 'Por favor, ingresa una nota válida para el proyecto (entre 0 y 10).';
            }
            
            // Si hay errores, los muestra y detiene el cálculo
            if (errorMessage) {
                errorMessageEl.textContent = errorMessage;
                errorMessageEl.classList.remove('hidden');
                resultArea.classList.remove('hidden');
                finalGradeEl.textContent = '0.00';
                return;
            }

            // Calcula el promedio de actividades
            const averageActivities = sumOfActivities / countOfActivities;

            // Calcula la nota final con la fórmula ponderada
            const finalGrade = (averageActivities * 0.70) + (examGrade * 0.20) + (projectGrade * 0.10);

            // Muestra la nota final redondeada
            finalGradeEl.textContent = finalGrade.toFixed(2);
            resultArea.classList.remove('hidden');

            // Muestra la advertencia si la nota es menor a 7
            if (finalGrade < 7) {
                warningMessageEl.classList.remove('hidden');
            } else {
                warningMessageEl.classList.add('hidden');
            }
        }

        // Asocia las funciones a los botones
        addGradeBtn.addEventListener('click', addGradeInput);
        calculateBtn.addEventListener('click', calculateGrade);

    </script>
</body>
</html>
